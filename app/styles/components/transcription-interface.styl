.transcription-interface
    flex: 1
    position: relative

    > .svg
        bottom: 0
        left: 0
        position: absolute
        right: 0
        top: 0

    > .svg.-dragging
        cursor: move

    > .overlay
        bottom: 0
        left: 0
        position: absolute
        right: 0
        top: 0
        display: flex
        align-items: center
        justify-content: center

    > .overlay > .copyright
        font-size: 10px
        position: absolute
        bottom: 20px
        left: 20px
        z-index: 9999
