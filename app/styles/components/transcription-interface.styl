.transcription-interface
    flex: 1
    position: relative

    > .svg
        bottom: 0
        left: 0
        position: absolute
        right: 0
        top: 0

    > .svg.-dragging
        cursor: move

    > .overlay
        bottom: 0
        left: 0
        position: absolute
        right: 0
        top: 0
        display: flex
        align-items: center
        justify-content: center
