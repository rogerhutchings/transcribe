.team-content
    @extend .container
    padding-bottom: 40px
    padding-top: 40px

    > h1
        margin-bottom: 40px

    > section > .people
        border-top: 1px solid dark-grey
        padding-top: 30px
        @media (min-width: $screen-sm-min)
            -webkit-columns: 2
            columns: 2

    > section > .people > .person
        margin-bottom: 30px

    > section > .people > .person > .row > img
        @extend .img-responsive
        @extend .col-xs-3
        @extend .col-sm-4
        border-radius: 100%

    > section > .people > .person > .row > .bio
        @extend .col-xs-9
        @extend .col-sm-8

    > section > .people > .person > .row > .bio > h2
        background-color: green
        display: inline-block
        font-size: 20px
        font-weight: bold
        left: -10px
        margin-top: 0
        padding: 5px 10px
        position: relative

    > section > .people > .person > *
        -webkit-column-break-inside: avoid
        page-break-inside: avoid
        break-inside: avoid
