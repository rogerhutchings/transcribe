.artist-detail
    background-color: #f0f0f0
    color: #39403e
    padding-bottom: 30px
    padding-top: 30px

    > .container > .info > img
        @extend .hidden-xs
        @extend .col-sm-3
        @extend .col-md-2
        @extend .col-md-push-2

    > .container > .info > .bio
        @extend .col-sm-9
        @extend .col-md-6
        @extend .col-md-push-2

    > .container > .info > .bio > h1
        background-color: #d1e54e
        display: inline-block
        font-size: 26px
        font-weight: bold
        left: -10px
        margin-top: 0
        padding: 5px 10px
        position: relative

    > .container > .info > .bio > p
        font-size: 18px
        margin-bottom: 0

