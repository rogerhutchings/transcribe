$hide-text
    // There's probably a better way of doing this, but it's still better
    // than the -9999px hack
    display: block
    height: 0
    width: 0
    overflow: hidden

button-active-variant($color, $background, $border)
    &:hover,
    &:focus,
    &.focus,
    &:active,
    &.active,
    .open > .dropdown-toggle&
        color $color
        background-color $background
        border-color $border
